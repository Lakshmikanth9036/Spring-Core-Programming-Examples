<?xml version="1.0" encoding="UTF-8"?>


<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans.xsd">
			
<!-- Setter Based DI allow partial DI.
     we can change the order.
     Re-inject the dependency.
     override the constructor based dependency injection.
     Setter Based DI, we can use for optional -->
     
   <bean id="product" class="com.kalibermind.domain.Product">
   		<property name="id" value="101" />
   		<property name="name" value="IPhone" />
   		<property name="model" value="IPhone 8" />
   		<property name="price" value="80000.00" />
   		<property name="brand" value="Apple" />
   		<property name="category" value="Electronics" />
   
   </bean>
			
</beans>